{
    "info": {
        "_postman_id": "YOUR_COLLECTION_ID",
        "name": "Lure API - Purchase Flow Mockup",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Testing the purchase and payment flow for the Lure API."
    },
    "item": [
        {
            "name": "1. Authentication",
            "item": [
                {
                    "name": "Login User (Get JWT)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"user@example.com\",\n    \"auth_provider\": \"Google\",\n    \"provider_id\": \"GOOGLE_USER_ID_HERE\",\n    \"name\": \"Test User\",\n    \"photo\": null\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/user/create",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "user",
                                "create"
                            ]
                        },
                        "description": "Execute esta requisição para obter um JWT. Copie o valor de 'token' da resposta e cole na variável de ambiente 'jwt_token'."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "2. Address Management",
            "item": [
                {
                    "name": "Create Shipping Address",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"street\": \"Rua Exemplo\",\n    \"number\": 123,\n    \"city\": \"Cidade Exemplo\",\n    \"state\": \"SP\",\n    \"zip_code\": \"12345000\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/address/create",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "address",
                                "create"
                            ]
                        },
                        "description": "Cria um novo endereço. Copie o 'id' do endereço criado da resposta (dentro de 'data.data.id') para usar na criação da compra."
                    },
                    "response": []
                },
                 {
                    "name": "List User Addresses",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/address/read/all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "address",
                                "read",
                                "all"
                            ]
                        },
                        "description": "(Opcional) Lista os endereços do usuário logado."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "3. Initiate Purchase (Simulated)",
            "item": [
                {
                    "name": "Create Purchase (Simulates Start of Checkout)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"shipping_address_id\": 1, \n    \"shipping_cost\": 15.50, \n    \"taxes\": 5.00, \n    \"items\": [\n        {\n            \"product_id\": 1, \n            \"size_id\": 1, \n            \"quantity\": 2,\n            \"unit_price_at_purchase\": 99.90 \n        }\n    ]\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/purchases",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "purchases"
                            ]
                        },
                        "description": "Inicia a compra, cria a Purchase, PurchaseItems. Esta rota deveria, no backend, também:\n1. Calcular totais (subtotal, total_amount).\n2. Chamar o Stripe para criar PaymentIntent.\n3. Criar a Transaction inicial (status pending).\nRetorna os detalhes da Purchase criada. Copie o 'id' da Purchase para usar depois."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "4. Post-Payment (Simulated Webhook Update)",
            "description": "Estas requisições simulam o que aconteceria após o pagamento ser confirmado pelo Stripe e o webhook ser recebido.",
            "item": [
                 {
                    "name": "Get Transaction by Gateway ID (Simulates Webhook Lookup)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/transactions/gateway/pi_example_stripe_id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "transactions",
                                "gateway",
                                "pi_example_stripe_id"
                            ]
                        },
                        "description": "Busca a transação usando o ID do gateway (ex: payment_intent_id do Stripe). Copie o 'id' da transação para a próxima etapa."
                    },
                    "response": []
                },
                {
                    "name": "Update Transaction Status (Simulates Webhook Action)",
                    "request": {
                        "method": "PUT",
                        "header": [
                             {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                         "body": {
                            "mode": "raw",
                            "raw": "{\n    \"payment_status_id\": 3 \n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/transactions/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "transactions",
                                "1"
                            ]
                        },
                        "description": "Simula a atualização do status da transação após o webhook do Stripe (ex: para 'succeeded')."
                    },
                    "response": []
                },
                 {
                    "name": "Update Purchase (Simulates Webhook Action)",
                    "request": {
                        "method": "PUT",
                        "header": [
                             {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                         "body": {
                            "mode": "raw",
                            "raw": "{\n    \"tracking_number\": \"BR123456XYZ\", \n    \"estimated_delivery_date\": \"2024-12-31\"\n    \n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/purchases/YOUR_PURCHASE_UUID",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "purchases",
                                "YOUR_PURCHASE_UUID"
                            ]
                        },
                        "description": "Simula a atualização da Purchase após o pagamento (ex: adicionar rastreio)."
                    },
                    "response": []
                }
            ]
        },
         {
            "name": "5. Verify Final State",
            "item": [
                 {
                    "name": "Get Purchase Details (Final Check)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/purchases/YOUR_PURCHASE_UUID?include_items=true&include_transactions=true&include_history=true",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "purchases",
                                "YOUR_PURCHASE_UUID"
                            ],
                            "query": [
                                { "key": "include_items", "value": "true" },
                                { "key": "include_transactions", "value": "true" },
                                { "key": "include_history", "value": "true" }
                            ]
                        },
                        "description": "Busca os detalhes completos da compra para verificar se os itens, transações e histórico estão corretos."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Reference Data (Optional)",
            "item": [
                {
                    "name": "Get All Currencies",
                    "request": {
                        "method": "GET",
                        "header": [ { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
                        "url": { "raw": "{{base_url}}/currencies", "host": [ "{{base_url}}" ], "path": [ "currencies" ] }
                    }, "response": []
                },
                 {
                    "name": "Get All Payment Statuses",
                    "request": {
                        "method": "GET",
                        "header": [ { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
                        "url": { "raw": "{{base_url}}/payment-statuses", "host": [ "{{base_url}}" ], "path": [ "payment-statuses" ] }
                    }, "response": []
                },
                {
                    "name": "Get All Transaction Methods",
                    "request": {
                        "method": "GET",
                        "header": [ { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
                        "url": { "raw": "{{base_url}}/transaction-methods", "host": [ "{{base_url}}" ], "path": [ "transaction-methods" ] }
                    }, "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:60123",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "PASTE_YOUR_JWT_TOKEN_HERE",
            "type": "string"
        }
    ]
}